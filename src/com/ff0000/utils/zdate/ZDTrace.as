package com.ff0000.utils.zdate {		public class ZDTrace {		/* --- MISC DATA ---------------------------------------------------------------------------------------------		 *		 *		 */		private var verbosity:int = 0;		/* --- SINGLETON SETUP ---------------------------------------------------------------------------------------		 *		 *		 */		private static var instance:ZDTrace;		// singleton management		internal static function getInstance():ZDTrace {			if( instance == null ) {				instance = new ZDTrace();			}			return instance;		}		public function ZDTrace():void {			instance = this;		}								/* --- ZD TRACE ---------------------------------------------------------------------------------------------		 *		 *		 */		public function startZDTrace( $_level:int ):void {			verbosity = $_level;		}		public function log( $_string:String, $_level:int ):void {			if( $_level <= verbosity ) {				trace( $_string );			}		}			}}